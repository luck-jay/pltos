menu "CPU Arch"

choice
    prompt "Arch select for cpu"
    default CORTEX_M3

config CORTEX_M0
    bool "CPU arch for cortex-m0"

config CORTEX_M3
    bool "CPU arch for cortex-m3"

config CORTEX_M4
    bool "CPU arch for cortex-m4"

endchoice

config ARCH
	string
	default "cortex-m0" if CORTEX_M0
	default "cortex-m3" if CORTEX_M3
	default "cortex-m4" if CORTEX_M4

source "arch/cortex-m3/Kconfig"

endmenu
